<div class="container">
  <div class="list-group">
    <% pokemon.rentals.each do |rental| %>
      <%= link_to approvals_path, class: "decorator-none" do %>
        <div class="list-group-item <%= rental.status == "pending" ? "list-group-item-info" : "list-group-item-success" %>">
          <%= rental.status %><br/>
          From : <%= rental.start_date.strftime("%A, %B %e, %Y") %><br/>
          To : <%= rental.end_date.strftime("%A, %B %e, %Y") %>
        </div>
      <% end %>
    <% end %>
    <%= pokemon.rentals == [] ? "no rentals at the moment" : "" %>
  </div>
</div>
