<div class="text-center m-5">
<h1><strong>Create a Pokemon</strong></h1>
</div>
<div class="container text-center">
<%= form_for(@pokemon) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <%= f.label :name, class: "form-label" %>
      </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <%= f.label :element, class: "form-label" %>
      </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :element, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2 ">
        <%= f.label :age, class: "form-label" %>
      </div>
      <div class="col-md-4 mb-2">
        <%= f.number_field :age, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <%= f.label :nickname, class: "form-label" %>
      </div>
      <div class="col-md-4 mb-2">
        <%= f.text_field :nickname, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-md-2">
        <%= f.label :rating, class: "form-label" %>
      </div>
      <div class="col-md-4 mb-2">
        <%= f.number_field :rating, class: "form-control" %>
      </div>
    </div>
  <div class= "m-4">
    <%= f.submit %>
  </div>
<% end %>
</div>
</div>
