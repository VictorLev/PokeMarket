<div class="container">
  <div class="text-center mt-4">
    <h1><strong>Create a Pokemon</strong></h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for(@pokemon, html: { class: "mt-4" }) do |f| %>

        <% if @pokemon.errors[:base].any? %>
          <div class="alert alert-danger" role="alert">
            <%= f.error :base %>
          </div>
        <% end %>

        <%= f.input :name do %>
          <%= f.collection_select :name, Pokemon.order(:name), :name ,:name, { prompt: "Select a name" }, { class: "form-control" } %>
        <% end %>
        <%= f.input :element do %>
        <%= f.collection_select :element, ["bug", "dark", "dragon", "electric", "fairy", "fighting", "fire", "flying", "ghost", "grass", "ground", "ice", "normal", "poison", "psychic", "rock", "steel", "water"], :to_s, :to_s, { prompt: "Select an element" }, { class: "form-control" } %>
        <% end %>
        <%= f.input :age %>
        <%= f.input :address, input_html: {data: {address_autocomplete_target: "address"}},
        wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
        %>
        <%= f.input :nickname %>
        <%= f.input :rating, placeholder: "write a rating between 0 and 5" %>
        <div class="button-center">
        <%= f.button :submit, "Create", class: "btn btn-hero success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
