<div class="container">
  <div class="text-center mt-4">
    <h1><strong>Create a Pokemon</strong></h1>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for(@pokemon, html: { class: "mt-4" }) do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :element, class: "form-label" %>
          <%= f.text_field :element, class: "form-control"%>
        </div>

        <div class="mb-3">
          <%= f.label :age, class: "form-label" %>
          <%= f.number_field :age, class: "form-control"%>
        </div>

        <div class="mb-3">
          <%= f.label :nickname, class: "form-label" %>
          <%= f.text_field :nickname, class: "form-control"%>
        </div>

        <div class="mb-3">
          <%= f.label :rating, class: "form-label" %>
          <%= f.number_field :rating, class: "form-control"%>
        </div>

        <div class="text-center mb-4">
          <%= f.submit "Create Pokemon", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
